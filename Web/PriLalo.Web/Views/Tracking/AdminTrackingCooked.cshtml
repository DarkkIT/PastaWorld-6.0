@model PriLalo.Web.ViewModels.Orders.OrdersListViewModel;
@{
    this.ViewData["Title"] = "Tracking Cooked";
}

<head>
    <link rel="stylesheet" href="~/css/trackingListsCooked.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<div class="text-hide mt-5">
    <p>MoveDown</p>
</div>

<h1 class="text-center">Лист за Доставка</h1>

<div>

    <table class="table table-striped">
        <thead>
            <tr>
                @if (Model.Orders.Count() > 0)
                {
                    <th scope="col">Image</th>
                    <th scope="col">Id</th>
                    <th scope="col">Client</th>
                    <th scope="col">Client Phone</th>
                    <th scope="col">Address</th>
                    <th scope="col">Meals</th>
                    <th scope="col">Action</th>
                }
                else
                {
                    <th class="row justify-content-center" scope="col">Orders</th>
                }

            </tr>
        </thead>

        @if (Model.Orders.Count() > 0)
        {
            @foreach (var order in Model.Orders)
            {
                <tbody>
                    <tr>
                        <td><img src="~/images/profils/ProfilOne.jpg" style="max-height: 60px;" alt="image" /></td>
                        <td>@order.Id</td>
                        <td>@order.FirstName @order.FamilyName</td>
                        <td class="phone">
                            @order.PhoneNumber
                            </td>
                        <td class="addrres">
                            @order.Address
                        </td>
                        <td>
                            <pre class="" style="white-space: pre-line;">
                                @order.Meals
                            </pre>
                        </td>
                        <td>
                            <a class="button1 button-tracker-list nav-link ml-4" asp-controller="Tracking" asp-action="ChangeStatus" asp-route-orderId="@order.Id" asp-route-status="Delivered">Done</a>
                        </td>
                    </tr>
                </tbody>
            }
        }
        else
        {
            <tr>
                <td class=" row justify-content-center">There no orders to show</td>
            </tr>
        }


    </table>

</div>